@model IEnumerable<Core.Entities.Department>

@{
    ViewData["Title"] = "Departments";    
}

<h1>Departments</h1>

@await Html.PartialAsync("_ErrorModal")

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model) {
            <tr>
                <td>@d.Id</td>
                <td>@d.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@d.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@d.Id"
                       onclick="return confirm('Delete this department?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Department</a>