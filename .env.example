# SQL Server credentials
SA_PASSWORD=<YOUR_SA_PASSWORD>
ACCEPT_EULA=Y

# Database connection
DB_HOST=db
DB_PORT=1433
DB_NAME=ArboxDb
DB_USER=sa

# ASP.NET Core settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:80

# Compound connection?string (uses env vars above)
CONNECTIONSTRINGS__Default=Server=${DB_HOST},${DB_PORT};Database=${DB_NAME};User Id=${DB_USER};Password=${SA_PASSWORD};TrustServerCertificate=True;Encrypt=True